    sw $t1, 0($t5)
    sw $t1, 4($t5)
    sw $t1, 256($t5)
    sw $t1, 260($t5)
    
    addi $t5, $t4, 11968    # Position 2: Green
    sw $t2, 0($t5)
    sw $t2, 4($t5)
    sw $t2, 256($t5)
    sw $t2, 260($t5)
    
    addi $t5, $t4, 9288     # Position 3: Yellow
    sw $t3, 0($t5)
    sw $t3, 4($t5)
    sw $t3, 256($t5)
    sw $t3, 260($t5)

    j continue

